<h3 class="text-center text-info">Produtos</h3>
<div class="row mb-2">
    <div class="col-12">
        <div class="float-right">
            <a class="btn btn-primary" href="/produto/cadastro"> Novo Produto</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th class="coluna-codigo">Codigo</th>
            <th class="coluna-id-supermercado">Supermercado</th>
            <th class="coluna-id-fornecedor">Fornecedor</th>
            <th class="coluna-nome">Nome</th>
            <th class="coluna-peso">Peso</th>
            <th class="coluna-preco">Preço</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Models.Produto produto in ViewBag.Produtos)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Supermercado.Nome</td>
                <td>@produto.Fornecedor.NomeFantasia</td>
                <td>@produto.Nome</td>
                <td>@produto.Peso</td>
                <td>@produto.Preco</td>
                <td>
                    <a href="/produto/editar/@produto.Id" class="text-success mr-2"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="Editar o Registro">Editar</a>
                    <a href="/produto/delete/@produto.Id" class="text-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th class="coluna-codigo">Codigo</th>
            <th class="coluna-id-supermercado">Supermercado</th>
            <th class="coluna-id-fornecedor">Fornecedor</th>
            <th class="coluna-nome">Nome</th>
            <th class="coluna-peso">Peso</th>
            <th class="coluna-preco">Preço</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>

